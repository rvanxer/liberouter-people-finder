<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/MainViewTitleBannerColor">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="Identity of the Person"
            android:background="@color/MainViewTitleBannerColor"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/MainViewTitleTextColor"
            android:textStyle="bold"
            android:textSize="18dp"
            android:id="@+id/textView"/>

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gui_block"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/linearLayout">

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Family Name"
                        android:id="@+id/textView1"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@android:color/black"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textSize="20dp"/>

                <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/postPersonFamilyNameText"
                        android:gravity="left|top"
                        android:inputType="textMultiLine"
                        android:linksClickable="false"
                        android:background="@drawable/gui_block_editfield"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:lines="1"
                        android:singleLine="true"/>

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Given Name"
                        android:id="@+id/textView2"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@android:color/black"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textSize="20dp"/>

                <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/postPersonGivenNameText"
                        android:gravity="left|top"
                        android:inputType="textMultiLine"
                        android:linksClickable="false"
                        android:background="@drawable/gui_block_editfield"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:lines="1"
                        android:singleLine="true"/>

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Alternative Names"
                        android:id="@+id/textView3"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@android:color/black"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textSize="20dp"/>

                <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/postPersonAltNamesText"
                        android:gravity="left|top"
                        android:inputType="textMultiLine"
                        android:linksClickable="false"
                        android:background="@drawable/gui_block_editfield"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:lines="1"
                        android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gui_block"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/linearLayout2">

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sex"
                            android:id="@+id/textView4"
                            android:gravity="center_vertical|center_horizontal"
                            android:textColor="@android:color/black"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:textSize="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"/>

                    <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/postPersonSex"
                            android:layout_margin="5dp"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Age"
                            android:id="@+id/textView5"
                            android:gravity="center_vertical|center_horizontal"
                            android:textColor="@android:color/black"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:textSize="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"/>

                    <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/postPersonAgeText"
                            android:gravity="left|top"
                            android:inputType="number"
                            android:linksClickable="false"
                            android:background="@drawable/gui_block_editfield"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:lines="1"
                            android:singleLine="true"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gui_block"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/linearLayout3">

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Street"
                        android:id="@+id/textView6"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@android:color/black"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textSize="20dp"/>

                <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/postPersonStreetText"
                        android:gravity="left|top"
                        android:inputType="textMultiLine"
                        android:linksClickable="false"
                        android:background="@drawable/gui_block_editfield"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:lines="1"
                        android:singleLine="true"/>

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Neighborhood"
                        android:id="@+id/textView7"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@android:color/black"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textSize="20dp"/>

                <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/postPersonNghbrhoodText"
                        android:gravity="left|top"
                        android:inputType="textMultiLine"
                        android:linksClickable="false"
                        android:background="@drawable/gui_block_editfield"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:lines="1"
                        android:singleLine="true"/>

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="City"
                        android:id="@+id/textView8"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@android:color/black"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textSize="20dp"/>

                <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/postPersonCityText"
                        android:gravity="left|top"
                        android:inputType="textMultiLine"
                        android:linksClickable="false"
                        android:background="@drawable/gui_block_editfield"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:lines="1"
                        android:singleLine="true"/>

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Province or State"
                        android:id="@+id/textView9"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@android:color/black"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textSize="20dp"/>

                <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/postPersonStateText"
                        android:gravity="left|top"
                        android:inputType="textMultiLine"
                        android:linksClickable="false"
                        android:background="@drawable/gui_block_editfield"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:lines="1"
                        android:singleLine="true"/>

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Postal or Zip Code"
                        android:id="@+id/textView10"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@android:color/black"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textSize="20dp"/>

                <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/postPersonZipText"
                        android:gravity="left|top"
                        android:inputType="textMultiLine"
                        android:linksClickable="false"
                        android:background="@drawable/gui_block_editfield"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:lines="1"
                        android:singleLine="true"/>

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Country"
                        android:id="@+id/textView12"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@android:color/black"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textSize="20dp"/>

                <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/postPersonCountryText"
                        android:gravity="left|top"
                        android:inputType="textMultiLine"
                        android:linksClickable="false"
                        android:background="@drawable/gui_block_editfield"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:lines="1"
                        android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gui_block"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/linearLayout4">

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:id="@+id/textView11"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@android:color/black"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textSize="20dp"/>

                <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/postPersonDescText"
                        android:gravity="left|top"
                        android:inputType="textMultiLine"
                        android:linksClickable="false"
                        android:background="@drawable/gui_block_editfield"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:lines="4"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gui_block"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/linearLayout5"
                    android:visibility="gone">

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Photo"
                            android:id="@+id/textView13"
                            android:gravity="center_vertical|center_horizontal"
                            android:textColor="@android:color/black"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:textSize="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"/>

                    <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add..."
                            android:id="@+id/postPersonPhotoButton"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"/>

                </LinearLayout>
            </LinearLayout>

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:text="Publish"
                    android:id="@+id/postPersonPublishButton"
                    android:background="@drawable/green_button_small"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
